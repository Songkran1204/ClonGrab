<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grab">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Grab">
        <activity
            android:name=".Activity.CoinApi"
            android:exported="false" />
        <activity
            android:name=".Activity.ApiData"
            android:exported="false" />
        <activity
            android:name=".ui.ShowFoodPage"
            android:exported="false"
            android:label="@string/title_activity_show_food_page"
            android:theme="@style/Theme.Grab.NoActionBar" />
        <activity
            android:name=".Activity.AddDataSQLite"
            android:exported="false"
            android:label="@string/title_activity_add_data_sqlite" />
        <activity
            android:name=".Activity.ListMenu"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>